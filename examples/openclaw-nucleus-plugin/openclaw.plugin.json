{
  "id": "nucleus",
  "name": "Nucleus Tool Proxy",
  "description": "Routes OpenClaw tool calls through nucleus-tool-proxy for enforced execution.",
  "version": "0.1.0",
  "configSchema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "proxyUrl": {
        "type": "string",
        "description": "Base URL for nucleus-tool-proxy (e.g. http://127.0.0.1:8080)"
      },
      "authSecret": {
        "type": "string",
        "description": "Optional HMAC secret for signed requests"
      },
      "actor": {
        "type": "string",
        "description": "Optional actor identifier for audit logs"
      },
      "timeoutMs": {
        "type": "number",
        "description": "Request timeout in milliseconds"
      }
    }
  },
  "uiHints": {
    "authSecret": {
      "label": "HMAC Secret",
      "sensitive": true
    }
  }
}
